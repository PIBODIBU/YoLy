<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yoly.com.android.yoly">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".helper.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.BeforeLoginActivity"
            android:exported="true" /> <!-- TODO DEBUG -->
        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.RegisterActivity" />
        <activity
            android:name=".ui.activity.LearnActivity"
            android:exported="true" /> <!-- TODO DEBUG -->
        <activity
            android:name=".ui.activity.CountryChooseActivity"
            android:exported="true" /> <!-- TODO DEBUG -->
        <activity
            android:name=".ui.activity.AfterRegisterActivity"
            android:exported="true" /> <!-- TODO DEBUG -->
        <activity
            android:name=".ui.activity.NewsListActivity"
            android:exported="true" /> <!-- TODO DEBUG -->

        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:label="ServiceActivity"
            android:theme="@style/VK.Transparent" />
        <activity android:name=".ui.activity.LikedActivity" />
        <activity android:name=".ui.activity.NewsActivity" />
        <activity android:name=".ui.activity.ProLooksActivity" />
        <activity android:name=".ui.activity.AccountActivity" />
        <activity android:name=".ui.activity.ProLookInfoActivity" />
        <activity
            android:name=".ui.activity.NewLookActivity"
            android:exported="true" />
    </application>
</manifest>