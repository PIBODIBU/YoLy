<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.NewLookActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/hamburger"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_reorder_primary_24dp" />

            <ImageButton
                android:id="@+id/action1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/action2"
                android:layout_toStartOf="@+id/action2"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_reorder_primary_24dp" />

            <ImageButton
                android:id="@+id/action2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/action3"
                android:layout_toStartOf="@+id/action3"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_reorder_primary_24dp" />

            <ImageButton
                android:id="@+id/action3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_reorder_primary_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/laybg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_header"
            android:background="@color/colorBackground" />

        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/rl_header"
            android:layout_margin="16dp"
            android:background="@drawable/new_look_close_btn_bg"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_close_white_24dp" />

        <RelativeLayout
            android:id="@+id/rl_controls"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorNewLookBottomControlsBg">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_keyboard_arrow_up_primary_24dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>